{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"backgroundImage": {
		"url": "https://messagecardplayground.azurewebsites.net/assets/Mostly%20Cloudy-Background-Dark.jpg",
		"mode": "stretch",
		"altText": "Cloudy background image"
	},
	"body": [
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "This is some text",
					"altText": "This is TextBlock large",
					"size": "large"
				},
				{
					"type": "TextBlock",
					"text": "It doesn't wrap by default",
					"altText": "This is TextBlock bolder",
					"weight": "bolder"
				},
				{
					"type": "TextBlock",
					"text": "You can even draw attention to certain text with color",
					"wrap": true,
					"color": "attention"
				},
				{
					"type": "Image",
					"url": "https://adaptivecards.io/content/cats/1.png",
					"size": "medium",
					"altText": "Cat",
					"horizontalAlignment": "center"
				},
				{
					"type": "Action.Submit",
					"title": "OK",
					"data": "submit"
				},
				{
					"type": "RichTextBlock",
					"wrap": true,
					"paragraphs": [
					{
						"inlines": [
							{
								"type": "TextRun",
								"text": "Please click here: "
							},
							{
								"type": "TextRun",
								"text": "a very very long link that opens bing.com",
								"selectAction": {
									"type": "Action.OpenUrl",
									"url": "bing.com"
								}
							},
							{
								"type": "TextRun",
								"text": ". Gap. "
							}
							
						]
					}
				]
				},
				{
					"type": "RichTextBlock",
					"wrap": true,
					"paragraphs": [
					{
						"inlines": [
							{
								"type": "TextRun",
								"text": "Please click here: "
							},
							{
								"type": "TextRun",
								"text": "bing.com",
								"selectAction": {
									"type": "Action.OpenUrl",
									"url": "bing.com"
								}
							}
							
						]
					}
				]
				}
			]	
		}
	]
}